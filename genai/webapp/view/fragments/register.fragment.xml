<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="register1"
      title="Register">
      <content>
      <HBox >
        <Text width="1rem" />
      <VBox class="sapUiSmallMargin">
        <HBox>
        <Text text="Username :"/>
        <Text width="4rem" />
        <Input id="name" placeholder="Enter User Name" width="10rem" />
        </HBox>
        <Text width="1rem"/>
        <HBox >
         <Text text="Email :"/>
        <Text width="6rem"/>
        <Input id="email" type="Email" placeholder="Enter Password" width="10rem"/>
        </HBox>
        <Text width="1rem"/>
         <HBox>
        <Text text="Password :"/>
        <Text width="2rem"/>
        <Input id="create" type="Password" placeholder="Create Password" width="10rem"/>
        </HBox>
        <Text width="1rem"/>
        <Button  type="Emphasized" width="80%" text="Register" press="onclose1"/>
      </VBox>
      </HBox>
      </content>
    </Dialog>
</core:FragmentDefinition>