<mvc:View controllerName="genai.controller.View1" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" 
    xmlns:f="sap.f" xmlns:tnt="sap.tnt" displayBlock="true" height="100%">
    <f:DynamicPage id="dynamicPage" headerExpanded="true" toggleHeaderOnTitleClick="false" >
        <f:content >
            <VBox class="sapUiContentPadding" justifyContent="Start" height="100%" width="100%" fitContainer="true">
                <Toolbar height="5rem" class="" >
                    <Button icon="sap-icon://menu2" press="onToggleSideNavigation" />
                    <ToolbarSeparator />
                    <Title text="Sales Report" />
                    <ToolbarSpacer />
                    <Text id="welcomeText" visible="false" />
                    <Button id="signoutButton" text="Sign Out" type="Reject" press="onSignOut" visible="false"/>
                    <Button id="signinButton" text="Signin" type="Emphasized" press="onSignin"/>
                </Toolbar>
          
                <FlexBox direction="Row" width="100%" height="100%"  >
                    <tnt:SideNavigation id="sideNavigation" visible="false" class="sideNav">
                        <tnt:NavigationList>
                            <tnt:NavigationListGroup id="chatHistoryItem" items="{/ChatHistory}" text="Chat History" >
                              <tnt:NavigationListItem   text="{Answer}" tooltip="{Question}"  select="onChatHistoryItemSelect" />
                            </tnt:NavigationListGroup>
                        </tnt:NavigationList>
                    </tnt:SideNavigation>
                    <VBox class="sapUiContentPadding" justifyContent="SpaceBetween" height="100%">
                    <VBox id="chatArea" width="100%" >
                    </VBox>
                    <Text id="backgroundText" text="Ask Anything about Sales report" visible="{= !${/messages}.length }" class="backgroundText" />
                     <HBox class="sapUiLargeMargin">
                      <Button icon="sap-icon://add"  type="Transparent" press="onAddChat" />
                       <Input id="messageInput" class="customInput" width="20rem"   placeholder="Type your message..."  liveChange="onMessageInputChange" editable="false"/>
                        <Text width="2rem" />
                        <Button text="Send" type="Emphasized" press="onSendMessage" />
                    </HBox>
                 </VBox>
                </FlexBox>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>