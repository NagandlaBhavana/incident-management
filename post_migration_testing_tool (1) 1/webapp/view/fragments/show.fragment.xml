<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog 
    title="Response Comparison" 
    class="sapUiResponsivePadding" 
    draggable="true" 
    resizable="true" 
    id="PayloadComparionDialog">
		<content>
			<!-- Fixed Status and Date -->
			<VBox class="sapUiSmallMargin">
				<Text text="Status: " id="statusText"/>
				<Text text="Date: " id="dateText"/>
			</VBox>
			<!-- Scrollable Content -->
			<ScrollContainer height="65vh" width="70vw" vertical="true" class="sapUiSmallMargin">
				<Table id="comparisonTable" items="{/responses}">
					<columns>
						<Column>
							<Text text="PI/PO Response" />
						</Column>
						<Column>
							<Text text="CPI Response" />
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{pipo}" />
								<Text text="{cpi}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</content>
		<buttons>
			<Button text="Compare" press=".onCompare"  class="sapUiSmallMarginEnd"/>
			<Button text="Ignore" press=".onIgnore"  class="sapUiSmallMarginEnd" enabled="false" id="ignore"/>
			<Button text="Close" press=".onCloseComparisonDialog" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>

