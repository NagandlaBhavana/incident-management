<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog contentWidth="700px"  id="settings" >
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="View Settings"/>
				</contentMiddle>
				<contentRight>
					<Button text="Reset" press="onResetPIPOSettings"/>
				</contentRight>
			</Bar>
		</customHeader>
		<IconTabBar headerBackgroundDesign="Solid"
		id="idIconTabBarNoIcons"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter text="Columns" key="columns">
					<content>
						<OverflowToolbar >
							<SearchField id="searchField" width="30%" placeholder="Search" search="onSearchPIPOInterfaceFrg"/>
						</OverflowToolbar>
						<List id="PIPOInterfaceCheckboxList" mode="MultiSelect" selectionChange="onSelectionChangePIPOInterface">
							<items>
								<StandardListItem title="Select All" type="Active" id="selectAll" />
								<StandardListItem title="S.No" id="SerialNoFrag" type="Active" selected="true"/>
								<StandardListItem title="Sender Component ID" id="SenderComponentIDFrag" type="Active" selected="true"/>
								<StandardListItem title="Interface Name" id="InterfaceNameFrag" type="Active" selected="true"/>
								<StandardListItem title="Interface Namespace" id="InterfaceNamespaceFrag" type="Active" selected="true"/>
							</items>
						</List>
					</content>
				</IconTabFilter>
				<IconTabFilter text="Sort" key="sort">
					<content>
						<ComboBox id="PIPOInterfaceDetailsSort" placeholder="Sort By" class="sort_style">
							<items>
								<core:Item key="SenderComponentID" text="Sender Component ID" />
								<core:Item key="InterfaceName" text="Interface Name" />
								<core:Item key="InterfaceNamespace" text="Interface Namespace" />
							</items>
						</ComboBox>
						<Label text="" width="3rem"/>
						<Button icon="sap-icon://sort-ascending" press="onSortAscending"  id="sortAscendingBtn"/>
						<Button icon="sap-icon://sort-descending" press="onSortDescending"  id="sortDescendingBtn"/>
						<Label text="" width="3rem"/>
						<Text id="sorting_text" text="Sort" class="sapUiTinyMarginTop" />
					</content>
				</IconTabFilter>

				<IconTabFilter text="Filter" key="filter">
				<HBox>
					<VBox>
                            <Label text="Sender Component ID : " labelFor="SenderComponentIDFilter" class=""/>
                            <ComboBox id="SenderComponentIDFilter" items="{/icoDetails}" selectionChange="onSenderComponentIDChange" placeholder="Select Sender Component ID">
                                <items>
                                    <core:Item key="{SenderComponentID}" text="{SenderComponentID}" />
                                </items>
                            </ComboBox>
                        </VBox>
                        <Label text="" width="3rem" />
                        <VBox>
                            <Label text="Interface Name : " labelFor="InterfaceNameFilter" class=""/>
                            <ComboBox id="InterfaceNameFilter" items="{/icoDetails}" selectionChange="onInterfaceNameChange" placeholder="Select Interface Name">
                                <items>
                                    <core:Item key="{InterfaceName}" text="{InterfaceName}" />
                                </items>
                            </ComboBox>
                        </VBox>
						</HBox>
				</IconTabFilter>
			</items>
		</IconTabBar>
		<buttons>
			<Button text="OK" press="onOK"/>
			<Button text="Cancel" press="onCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
