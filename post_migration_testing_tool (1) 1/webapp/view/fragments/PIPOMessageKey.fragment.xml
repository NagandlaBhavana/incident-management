<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog contentWidth="700px"  id="PIPOMsgSettings" >
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="View Settings"/>
				</contentMiddle>
				<contentRight>
					<Button text="Reset" press="onResetPIPOMsgSettings"/>
				</contentRight>
			</Bar>
		</customHeader>
		<IconTabBar headerBackgroundDesign="Solid"
		id="idIconTabBarNoIconsPIPOMsg"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter text="Columns" key="columns">
					<content>
						<OverflowToolbar >
							<SearchField id="searchFieldPIPOMsg" width="30%" placeholder="Search" search="onSearchPIPOMsgColumnsFrg"/>
						</OverflowToolbar>
						<List id="PIPOMsgCheckboxList" mode="MultiSelect" selectionChange="onSelectionChangePIPOMsg">
							<items>
								<StandardListItem title="Select All" type="Active" id="selectAllPIPOMsg" />
								<StandardListItem title="Message ID" id="MessageIDFrag" type="Active" selected="true"/>
								<StandardListItem title="Service Interface" id="ServiceInterfaceFrag" type="Active" selected="true"/>
								<StandardListItem title="Sender Component" id="SenderComponentFrag" type="Active" selected="true"/>
								<StandardListItem title="Receiver Component" id="ReceiverComponentFrag" type="Active" selected="true"/>
								<StandardListItem title="Quality Of Service" id="QualityOfServiceFrag" type="Active" selected="true"/>
								<StandardListItem title="Scheduled Time" id="scheduledTimeFrag" type="Active" selected="true"/>
                            </items>
						</List>
					</content>
				</IconTabFilter>
				<IconTabFilter text="Sort" key="sort">
					<content>
						<ComboBox id="PIPOPIPOMsgDetailsSort" placeholder="Sort By" class="sort_style">
							<items>
								<core:Item key="ScheduledTime" text="Scheduled Time" />
							</items>
						</ComboBox>
						<Label text="" width="3rem"/>
						<Button icon="sap-icon://sort-ascending" press="onSortAscendingPIPOMsg"  id="sortAscendingBtnPIPOMsg"/>
						<Button icon="sap-icon://sort-descending" press="onSortDescendingPIPOMsg"  id="sortDescendingBtnPIPOMsg"/>
						<Label text="" width="3rem"/>
						<Text id="sorting_textPIPOMsg" text="Sort" class="sapUiTinyMarginTop" />
					</content>
				</IconTabFilter>

				
			</items>
		</IconTabBar>
		<buttons>
			<Button text="OK" press="onPIPOMsgSettingsFrgOK"/>
			<Button text="Cancel" press="onPIPOMsgSettingsFrgCancel"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
